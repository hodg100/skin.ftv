<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="Viewtype54">
		<control type="group">
			<include>VisibleDelayFadeAnimation</include>
			<visible>Control.IsVisible(54)</visible>
			<!-- Album image -->
			<control type="group">
				<left>144</left>
				<top>96</top>
				<control type="image">
					<top>48</top>
					<width>480</width>
					<height>480</height>
					<aspectratio align="center">scale</aspectratio>
					<texture background="true" fallback="DefaultAlbumCover.png">$INFO[Container.Art(album.thumb)]</texture>
				</control>
				<control type="image">
					<left>-48</left>
					<centertop>288</centertop>
					<width>576</width>
					<height>576</height>
					<texture border="51">views/shadow_fo.png</texture>
				</control>
			</control>
			<!-- Artist / Album -->
			<control type="group">
				<left>691</left>
				<top>138</top>
				<control type="label">
					<width>840</width>
					<height>48</height>
					<font>Med48</font>
					<textcolor>ffbebebe</textcolor>
					<label>$INFO[Container.FolderName]</label>
				</control>
				<control type="label">
					<top>57</top>
					<width>840</width>
					<height>32</height>
					<font>Med32</font>
					<textcolor>ffbebebe</textcolor>
					<label>$VAR[AlbumArtistName]</label>
				</control>
			</control>
			<!-- List -->
			<control id="54" type="fixedlist">
				<left>668</left>
				<top>292</top>
				<width>1000</width>
				<height>900</height>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<onleft>1001</onleft>
				<onright>noop</onright>
				<focusposition>1</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime>0</scrolltime>
				<animation condition="[!system.getbool(filelists.showparentdiritems) + StringCompare(Container(54).CurrentItem,1)] | [system.getbool(filelists.showparentdiritems) + StringCompare(Container(54).CurrentItem,0)]" effect="slide" end="0,-101" start="0,0">Conditional</animation>
				<itemlayout height="101" width="1000">
					<control type="label">
						<width>68</width>
						<height>31</height>
						<font>Light32</font>
						<align>center</align>
						<textcolor>ff646668</textcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>
					<control type="label">
						<left>89</left>
						<width>892</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffd8d8d8</textcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!StringCompare(ListItem.Label,..) + !IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>892</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffd8d8d8</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..) | IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>892</width>
						<height>31</height>
						<font>Light32</font>
						<align>right</align>
						<textcolor>ff636466</textcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>
					<control type="label">
						<left>89</left>
						<top>35</top>
						<width>892</width>
						<height>28</height>
						<font>Light28</font>
						<textcolor>ff636466</textcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>!StringCompare(ListItem.AlbumArtist,ListItem.Artist)</visible>
					</control>
				</itemlayout>
				<focusedlayout height="101" width="1000">
					<control type="label">
						<width>68</width>
						<height>31</height>
						<font>Light32</font>
						<align>center</align>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.TrackNumber]</label>
					</control>
					<control type="label">
						<left>89</left>
						<width>892</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Title]</label>
						<visible>!StringCompare(ListItem.Label,..) + !IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>892</width>
						<height>31</height>
						<font>Light32</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<visible>StringCompare(ListItem.Label,..) | IsEmpty(ListItem.Title)</visible>
					</control>
					<control type="label">
						<left>89</left>
						<width>892</width>
						<height>31</height>
						<font>Light32</font>
						<align>right</align>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>
					<control type="label">
						<left>89</left>
						<top>35</top>
						<width>892</width>
						<height>28</height>
						<font>Light28</font>
						<textcolor>ffe9a01e</textcolor>
						<selectedcolor>ffe9a01e</selectedcolor>
						<label>$INFO[ListItem.Artist]</label>
						<visible>!StringCompare(ListItem.AlbumArtist,ListItem.Artist)</visible>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
</includes>